@model Movie

@{
    ViewData["Title"] = "The Details of Movies";
}


<div class="row">
    <div class="col-md-8 offset-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ImageUrl)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Cinema)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                    <th>@Html.DisplayNameFor(model => model.Producer)</th>
                    <th>@Html.DisplayNameFor(model => model.Actor_Movies)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="@Model.ImageUrl" alt="@Model.Name" style="max-width : 150px" />
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => Model.Name)
                    </td>
                    <td class="align-middle">
                        <b>Cinema:</b>
                        <a asp-action="Details" asp-controller="Cinema" asp-route-id ="@Model.Id">@Model.Cinema.Id</a>
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => Model.Description)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => Model.Price)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => Model.Producer)
                    </td>
                    <td class="align-middle">
                            @foreach (var item in Model.Actor_Movies)
                            {
                                
                                    <a asp-controller="Actors" asp-action="Details" asp-route-id="@item.ActorId">
                                    Detail Of Actor 
                                    </a>
                               
                            }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-controller="Movie" asp-route-id="@Model.Id" class="btn btn-outline-primary"><i class="bg-info bi-pencil-square"></i>Edit</a>
    <a asp-action="Index" asp-controller="Movie"  class="btn btn-outline-primary"><i class="bg-info bi-pencil-square"></i>Back To List</a>
</div>